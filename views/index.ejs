<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>all chats</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h2>allchats</h2>
    <form action="/chats/new" method="get">
        <button>New Chat</button>
    </form>
    <%for(let chat of chats){%>
        <div class="chat">
            <p>from:<%=chat.from%></p>
            <div class="msg">
                <p>:<%=chat.msg%></p>
            </div>
            <form action="/chats/<%=chat._id%>/edit" method="get">
                <button>Edit</button>
            </form>
            <p>recieved by:<%=chat.to%></p>
            <br>
            <form action="/chats/<%=chat._id%>?_method=DELETE" method="post">
                <button>Delete</button>
            </form>
            <br>
            <p><%=chat.created_at.toString().split(" ")[4]%></p>
            <p><%=chat.created_at.toString().split(" ").slice(0,4).join("-")%></p>
        </div>
        <br>
    %<}%>
</body>
</html>

